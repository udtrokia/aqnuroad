/**index.wxss**/

.post-container{
    display: flex;
    flex-direction: column;
    background-color: #fff;
    border-bottom: 1rpx solid #ededed;
    border-top: 1rpx solid #ededed;
    padding: 8px auto;
    width: 100%;

}

.post-head{
  display: flex;
  positon:absolute;
  margin: 20rpx 20rpx 0rpx 20rpx;
  height:130rpx;
}

.post-icon{
  height:112rpx;
  width:112rpx;
  border-radius: 50%;
}
.head-text{
  position: flex;
  flex-direction: column;
  height:100%;
}
.post-author{
  display: block;
  margin: 20rpx 0rpx 0rpx 30rpx;
  font-size: 14pt;
}

.post-date{
  display:block;
  margin: 10rpx 0rpx 0rpx 30rpx;
  font-size: 8pt;
}

.post-body{
  display: flex;
  flex-direction: column;
  margin: 20rpx 20rpx 10rpx;
  padding-bottom: 50rpx; 
}

.post-content{
  font-size:12pt;
  padding: auto 20rpx;
  word-break:break-all;
}

.post-lists{
  position: absolute;
  height: 50px;
  weight:50px;
  border-radius: 50%; 
  z-index:999;
}

.options{
  position: fixed;
  right:20px;
  top:10px;
  height: 20px;
  width: 20px;
}