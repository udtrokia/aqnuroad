<!--pages/anke/myCard/myCard.wxml-->


<view class="myCard">
    <image class="avatar" bindtap="chooseImage" src="{{avatar}}"></image>
    <form bindsubmit="updateAnke" class="cardInfo">
        <input name="name" placeholder='姓名' placeholder-class='ph' class="input" value="{{name}}" disabled='{{disabled}}'></input>
        <input name="sex" placeholder="性别" placeholder-class='ph' class="input" value="{{sex}}"disabled='{{disabled}}'></input>
        <input name="age" placeholder="年龄" type="number" placeholder-class='ph' class="input" value="{{age}}" disabled='{{disabled}}'></input>
        <input name="hobby" placeholder="技能" placeholder-class='ph' class="input" value="{{hobby}}" disabled='{{disabled}}'></input>
        <input name="desire" placeholder="计划" placeholder-class='ph' class="input" value="{{desire}}" disabled='{{disabled}}'></input>
        <input name="work" placeholder="职位" placeholder-class='ph' class="input" value="{{work}}" disabled='{{disabled}}'></input>
        <input name="weChat" placeholder="微信号~" placeholder-class='ph' class="input" value="{{weChat}}" disabled='{{disabled}}'></input>
        <button plain='true' class="submit" form-type="submit" disabled="{{flag}}"> 更新 </button>
    </form>
</view >


